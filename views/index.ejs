<!DOCTYPE html>
<html>
  <head>
    <title>Cadets Uniform</title>
    <link rel="stylesheet" type="text/css" href="style.css">
  </head>
  <body>
    <h1>Squadron Uniform</h1>
    <button class="add-btn-green" id="add-btn">Add</button>
    <button class="add-btn-green" id="open-filter-popup">Filter</button>
    <div class="popup" id="popup">
      <div class="popup-content">
        <span class="popup-close" id="popup-close">&times;</span>
        <h2>Add Uniform Item</h2>
        <form id="add-form">
          <label for="name">Name:</label>
          <input type="text" id="name" name="name" required>
          <label for="gender">Gender:</label>
          <select id="gender" name="gender">
            <option value="M">M</option>
            <option value="F">F</option>
          </select>
          <label for="size">Size:</label>
          <input type="text" id="size" name="size" required>
          <label for="quantity">Quantity:</label>
          <input type="number" id="quantity" name="quantity" required>
          <button id="submit-btn" type="submit">Add</button>
        </form>
      </div>
    </div>


    <div id="filter-popup">
        <form id="filter-form">
            <span class="popup-close" id="close-filter-popup">&times;</span>
          <label for="gender-select">Gender:</label>
          <select id="gender-select" name="gender">
            <option value="">All</option>
            <option value="F">Female</option>
            <option value="M">Male</option>
          </select>
      
          <label for="size-select">Size:</label>
          <input type="text" id="size-select" name="size">
      
          <button type="submit">Filter</button>
        </form>
      </div>
    
    <h2>Uniform items:</h2>
    <ul id="item-list">
    <h3>Dark Blue Shirts</h3>
    <li style="font-weight: bold;">
        <span>Gender</span>
        <span>Size</span>
        <span>Quantity</span>
        <span>Remove</span>
    </li>
    <% const sortedResults = results.filter(item => item.name.includes('Shirt')).sort((a, b) => a.gender.localeCompare(b.gender)) %>
    <% for (var i = 0; i < sortedResults.length; i++) { %>
        <li data-id="<%= sortedResults[i].id %>">
            <span><%= sortedResults[i].gender %></span>
            <span><%= sortedResults[i].size %></span>
            <span><input type="number" class="quantity" value="<%= sortedResults[i].quantity %>" data-id="<%= sortedResults[i].id %>"></span>
            <span><button class="delete" data-id="<%= sortedResults[i].id %>">Delete</button></span>
        </li>
    <% } %>
    
    <h3>Trousers/Skirts</h3>
    <li style="font-weight: bold;">
        <span>Gender</span>
        <span>Size</span>
        <span>Quantity</span>
        <span>Remove</span>
    </li>
    <% for (var i = 0; i < results.length; i++) { %>
        <% if (results[i].name.includes('Trousers') || results[i].name.includes('Skirt')) { %>
        <li data-id="<%= results[i].id %>">
            <span><%= results[i].name %></span>
            <span><%= results[i].size %></span>
            <span><input type="number" class="quantity" value="<%= results[i].quantity %>" data-id="<%= results[i].id %>"></span>
            <span><button class="delete" data-id="<%= results[i].id %>">Delete</button></span>
        </li>
        <% } %>
    <% } %>
    <h3>Dress Uniform</h3>
    <li style="font-weight: bold;">
        <span>Gender</span>
        <span>Size</span>
        <span>Quantity</span>
        <span>Remove</span>
    </li>
    <% for (var i = 0; i < results.length; i++) { %>
        <% if (results[i].name.includes('No.1') || results[i].name.includes('Brassard') || results[i].name.includes('Stable Belt') || results[i].name.includes('Rank Slides') || results[i].name.includes('Beret')) { %>
        <li data-id="<%= results[i].id %>">
            <span><%= results[i].name %></span>
            <span><%= results[i].size %></span>
            <span><input type="number" class="quantity" value="<%= results[i].quantity %>" data-id="<%= results[i].id %>"></span>
            <span><button class="delete" data-id="<%= results[i].id %>">Delete</button></span>
        </li>
        <% } %>
    <% } %>
    <h3>Outerwear</h3>
    <li style="font-weight: bold;">
        <span>Name</span>
        <span>Size</span>
        <span>Quantity</span>
        <span>Remove</span>
    </li>
    <% for (var i = 0; i < results.length; i++) { %>
        <% if (results[i].name.includes('Jumper') || results[i].name.includes('Fleece') || results[i].name.includes('Combat Jacket') || results[i].name.includes('Waterproof Jacket')) { %>
        <li data-id="<%= results[i].id %>">
            <span><%= results[i].name %></span>
            <span><%= results[i].size %></span>
            <span><input type="number" class="quantity" value="<%= results[i].quantity %>" data-id="<%= results[i].id %>"></span>
            <span><button class="delete" data-id="<%= results[i].id %>">Delete</button></span>
        </li>
        <% } %>
    <% } %>
    <h3>Accessories</h3>
    <li style="font-weight: bold;">
        <span>Name</span>
        <span>Size</span>
        <span>Quantity</span>
        <span>Remove</span>
    </li>
    <% for (var i = 0; i < results.length; i++) { %>
        <% if (results[i].name.includes('Parade Shoes') || results[i].name.includes('Blue Lanyard') || results[i].name.includes('Tie') || results[i].name.includes('Webbing Belt')) { %>
        <li data-id="<%= results[i].id %>">
            <span><%= results[i].name %></span>
            <span><%= results[i].size %></span>
            <span><input type="number" class="quantity" value="<%= results[i].quantity %>" data-id="<%= results[i].id %>"></span>
            <span><button class="delete" data-id="<%= results[i].id %>">Delete</button></span>
        </li>
        <% } %>
    <% } %>
    <h3>MTP PCS Uniform</h3>
    <li style="font-weight: bold;">
        <span>Name</span>
        <span>Size</span>
        <span>Quantity</span>
        <span>Remove</span>
    </li>
    <% for (var i = 0; i < results.length; i++) { %>
        <% if (results[i].name.includes('MTP PCS')) { %>
        <li data-id="<%= results[i].id %>">
            <span><%= results[i].name %></span>
            <span><%= results[i].size %></span>
            <span><input type="number" class="quantity" value="<%= results[i].quantity %>" data-id="<%= results[i].id %>"></span>
            <span><button class="delete" data-id="<%= results[i].id %>">Delete</button></span>
        </li>
        <% } %>
    <% } %>
    </ul>



    <script type="text/javascript" src="script.js"></script>
  </body>
</html>
